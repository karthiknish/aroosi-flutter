rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile images - users can only upload to their own folder
    match /profile_images/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat images - only participants in the conversation can access
    match /chat_images/{conversationId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        isParticipantInConversationStorage(request.auth.uid, conversationId);
    }
    
    // Voice messages - only participants in the conversation can access
    match /voice_messages/{conversationId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        isParticipantInConversationStorage(request.auth.uid, conversationId);
    }
    
    // Educational content images - authenticated users can read, admins can write
    match /educational_content/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdminStorage(request.auth.uid);
    }
    
    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

// Helper functions for storage rules
function isParticipantInConversationStorage(userId, conversationId) {
  // Note: Storage rules can't directly query Firestore, so we rely on path structure
  // The conversationId should be validated at the application level
  // For now, allow if authenticated (conversation validation happens in app)
  return userId != null;
}

function isAdminStorage(userId) {
  // Note: Storage rules can't directly query Firestore
  // Admin check should be done at application level before upload
  // For now, we'll allow authenticated users (admin validation in app)
  // In production, consider using Firebase Functions for admin uploads
  return userId != null;
}
